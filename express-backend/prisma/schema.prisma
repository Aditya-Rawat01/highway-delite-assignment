model Experiences{
  id String @id @default(uuid()) 
  destination String 
  location String 
  description String 
  price Float 
  image String 
  slot Json // slot will have SlotGroup[] as its entries. 
  bookings Bookings[]
}

  
model Promos { 
  id String @id @default(uuid()) 
  name String @unique 
  discount Float 
  } 
  
model Bookings { 
  id String @id @default(uuid()) 
  seats Int
  dates DateTime 
  experienceId String 
  experiences Experiences @relation(fields: [experienceId], references: [id]) 
  }